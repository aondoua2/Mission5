<body>
    <!-- navigation bar -->
    <div class="w3-bar w3-border w3-light-grey">
        <!-- header -->
        <h1 class="center">ashley's hobby: piano 🎹</h1> <!-- navigation bar -->
        <div class="menu">
            <a href="~/Home/Index" class="link">Home</a>
            <a href="~/Home/Service" class="link">Services</a>
        </div>
    </div>

    <!-- Image section -->
    <div class="row">
        <!-- First column -->
        <div class="column">
            @RenderSection("LeftImage", required: false)
        </div>
        <!-- Second column -->
        <div class="column">
            @RenderSection("RightImage", required: false)
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Mission 5 Assignment. All rights reserved</p>
    </footer>

    <!-- Include jQuery -->
    <script src="lib/jquery/jquery.min.js"></script>
    <!-- Include Bootstrap JS -->
    <script src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Include your custom script -->
    <script src="js/script.js"></script>
